<%= link_to "Add New Food", new_inventory_food_path(@inventory), class: "btn btn-primary" %>

<h2 class="text-uppercase text-center"">
<%= @inventory.name %>
</h2>
<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @inventory.inventory_foods.includes(:food).each do |inventory_food| %>
      <tr>
        <td><%= inventory_food.food.name %></td>
        <td><%= inventory_food.quantity %></td>
        <td>
          <%= link_to "Delete", inventory_inventory_food_path(@inventory, inventory_food), method: :delete, data: { turbo_method: :delete, confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="d-flex justify-content-end">
  <%= link_to inventories_path, class: "btn btn-primary" do %>
    &larr; Back to inventories
  <% end %>
</div>
